{
  "name": "learn-webpack",
  "version": "1.0.0",
  "description": "学习 webpack 构建工具",
  "main": "index.js",
  "engines": {
    "node": ">=20.10.0",
    "rimraf": ">=6.0.0",
    "pnpm": ">=9.15.2"
  },
  "scripts": {
    "docs:local-preview": "pnpm run -F @learn-webpack/docs docs:dev",
